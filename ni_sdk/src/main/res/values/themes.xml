<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- This file contains Themes and ThemeOverlays -->

    <!-- Base application theme. -->
    <style name="Theme.NICardManagementSDK" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your base theme here. -->
        <item name="alertDialogTheme">@style/ThemeOverlay.NICardManagementSDK.MaterialAlertDialog</item>
    </style>

    <!--Default Top Level application theme-->
    <style name="Theme.NICardManagementSDK.DayNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Custom attributes -->
        <item name="colorDisabledImageButton">@color/gray3</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.Button.Pin.Number" parent="Theme.AppCompat.DayNight">
        <!-- the button text color -->
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.Button.Pin.ImageButton" parent="Theme.AppCompat.DayNight">
        <!-- the button background tint color -->
        <item name="colorButtonNormal">@color/gray3</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.ProgressBar" parent="Theme.AppCompat.DayNight">
        <item name="colorSecondary">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.MaterialAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="alertDialogStyle">@style/Widget.NICardManagementSDK.MaterialAlertDialog.Body.Text</item>
    </style>

</resources>