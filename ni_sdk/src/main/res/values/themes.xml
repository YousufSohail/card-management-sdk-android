<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- This file contains Themes and ThemeOverlays -->

    <!-- Base application theme. -->
    <style name="Theme.NICardManagementSDK" parent="Theme.AppCompat">
        <!-- Customize your base theme here. -->
        <item name="alertDialogTheme">@style/ThemeOverlay.NICardManagementSDK.MaterialAlertDialog</item>
    </style>

    <!--Default Top Level application theme-->
    <style name="Theme.NICardManagementSDK.DayNight" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorButtonNormal">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorControlActivated">@color/teal_700</item>
        <item name="colorControlNormal">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <!-- Custom attributes -->
        <item name="colorDisabledImageButton">@color/gray3</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.Button.Pin.Number" parent="Widget.AppCompat.Button">
        <!--the button text color-->
        <item name="colorControlNormal">?android:attr/colorControlNormal</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.Button.Pin.ImageButton" parent="Widget.AppCompat.Button">
        <!--the button background tint color-->
        <item name="colorButtonNormal">?attr/colorButtonNormal</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/gray3</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.MaterialAlertDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="alertDialogStyle">@style/Widget.NICardManagementSDK.MaterialAlertDialog.Body.Text</item>
    </style>

</resources>