<resources>
    <!-- Base application theme. -->
    <style name="Theme.NICardManagementSDK" parent="ThemeOverlay.AppCompat">
        <!-- Customize your base theme here. -->
        <item name="android:theme">@style/ThemeOverlay.NICardManagementSDK.MaterialAlertDialog</item>
    </style>

    <!--Default Top Level application theme-->
    <style name="Theme.NICardManagementSDK.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorControlActivated">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorBackgroundFloating">@color/teal_700</item>
        <item name="colorControlNormal">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Custom attributes -->
        <item name="colorDisabledImageButton">@color/gray3</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.Button.Pin.Number" parent="">
        <!-- the button text color -->
        <item name="colorPrimary">?android:attr/textColorPrimary</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.Button.Pin.ImageButton" parent="">
        <!-- the button background tint color -->
        <item name="colorButtonNormal">?attr/actionBarTheme</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.ProgressBar" parent="">
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="ThemeOverlay.NICardManagementSDK.MaterialAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="alertDialogStyle">@style/Widget.NICardManagementSDK.MaterialAlertDialog.Body.Text</item>
    </style>

</resources>